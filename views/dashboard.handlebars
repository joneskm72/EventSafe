
{{> nav/nav-block}}

<div id="dashboard">
  <div class="container mb-5">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="mt-4 text-center dashboard-top">Let's Get Offline!</h2>
        <h3 class="mt-4 text-left">Looking to finally get out of the house for some fun, but want to stay safe? We're here to help.</h3>
        <h3 class="mt-4 text-right">EventSafe offers a public forum for communities to advertise and search for local events that are practicing COVID-19 safety measures.</h3>
        <h3 class="mt-4 text-left">Write reviews for local businesses to express your take on their approach to keeping their customers safe in the pandemic.</h3>
      </div>
    </div>
  </div>

  {{#if isloggedin}}
  {{!-- Events --}}
  <div class="event-container mb-5">
    <div class="row">
      <div class="col-lg-12">
        <h1>Events Happening in Your Area</h1>
        <div id="event-list" class="list-group">
          {{#each events}}
          <div class="event-card col-lg-10">
            <div class="event-card-title card-header">
              <a  href="event/{{this.id}}"><button type="button" class="dashboard-headers btn btn-lg">{{this.name}}</button></a>
            </div>
            <img class="card-img-top" src="/assets/images/{{this.image}}" alt="Card image cap">
            <div class="event-card-body">
               <p>
                <strong>Date: </strong> <a id="event-date">{{this.date}}</a></p>
              <p>
              <p>
                <strong>Location: </strong> <a id="event-location">{{this.location}}</a></p>
              <p>
              <p>
                <strong>Type: </strong> <a id="event-type">{{this.type}}</a></p>
              <p>
              <p>
                <strong>About: </strong> <a id="event-description">{{this.description}}</a></p>
              <p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  {{!-- Reviews --}}
  <div class="event-container mb-5">
    <div class="row">
      <div class="col-lg-12">
        <h1>Recent Reviews in Your Area</h1>
        <div id="event-list" class="list-group">
          {{#each reviews}}
          <div class="event-card col-lg-10">
            <div class="event-card-title card-header">
              <a  href="review/{{this.id}}"><button type="button" class="dashboard-headers btn btn-lg">{{this.title}}</button></a>
            </div>
            <div class="event-card-body">
               <p>
                <strong>Date: </strong> <a id="event-date">{{this.createdAt}}</a></p>
              <p>
              <p>
                <strong>Location: </strong> <a id="event-location">{{this.location}}</a></p>
              <p>
              <p>
                <strong>Type: </strong> <a id="event-type">{{this.type}}</a></p>
              <p>
              <p>
                <strong>About: </strong> <a id="event-description">{{this.description}}</a></p>
              <p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  {{else}}
  {{/if}}
</div>

{{> modal/login-block}}