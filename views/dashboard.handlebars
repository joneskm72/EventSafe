
{{> nav/nav-block}}

<div id="dashboard">
  <div class="container mb-5">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="mt-4 text-center">Let's Get Offline!</h2>
        <h4 class="mt-4 text-left">Looking to finally get out of the house for some fun, but want to stay safe? We're here to help.</h4>
        <h4 class="mt-4 text-right">EventSafe offers a public forum for communities to advertise and search for local events that are practicing COVID-19 safety measures.</h4>
      </div>
    </div>
  </div>
  <div class="event-container mb-5">
    <div class="row">
      <div class="col-lg-12">
        <h1>Events</h1>
        <div id="event-list" class="list-group">
          {{#each events}}
          <div class="event-card col-lg-10">
            <div class="event-card-title">
              <a href="event/{{this.id}}">{{this.name}}</a>
            </div>
            <div class="event-card-body">
               <p>
                <strong>Date: </strong>: <a id="event-date">{{this.date}}</a></p>
              <p>
              <p>
                <strong>Time: </strong>: <a id="event-time">{{this.time}}</a></p>
              <p>
              <p>
                <strong>Location: </strong>: <a id="event-location">{{this.location}}</a></p>
              <p>
              <p>
                <strong>Type: </strong>: <a id="event-type">{{this.type}}</a></p>
              <p>
              <p>
                <strong>About: </strong>: <a id="event-description">{{this.description}}</a></p>
              <p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

