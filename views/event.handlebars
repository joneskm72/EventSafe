{{> nav/nav-block}}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="mt-4">{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="event-text">Event Name</label>
            <input type="text" id="event-text" class="form-control" aria-describedby="event-text" placeholder="what is your event name?">
          </div>
          <div class="form-group">
            <label for="event-date">Date</label>
            <input type="date" id="event-date" class="form-control" aria-describedby="event-text" placeholder="Enter events Date">
          </div>
          <div class="form-group">
            <label for="event-loc">Location</label>
            <input type="text" id="event-loc" class="form-control" aria-describedby="event-text" placeholder="where?">
          </div>
          <div class="form-group">
            <label for="event-type">Type</label>
            <select name="type" class="form-control" id="event-type">
              <option data-img="movie.jpg" value="Movie">Movie</option>
              <option value="Sports">Sports</option>
              <option value="Fundraiser">Fundraiser</option>
              <option value="Food">Food &amp; Beverage</option>
              <option value="Festival">Festival</option>
              <option value="Arts">Arts &amp; Crafts</option>
              <option value="Exercise">Group Exercise/Dance</option>
              <option value="Trivia">Trivia</option>
              <option value="Music">Music</option>
              <option value="Walk">Walk</option>
              <option value="Conference">Conference</option>
            </select>
          </div>
          <div class="form-group">
            <label for="event-description">Description</label>
            <textarea class="form-control" id="event-description" aria-describedby="event-description" placeholder="tell us about it!"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h4>events belonging to this user:</h4>
        <ul id="event-list" class="list-group">
          {{#each events}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="event/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/event.js"></script>

