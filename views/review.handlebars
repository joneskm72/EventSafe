{{> nav/nav-block}}
<!-- may need to replace all event-text with review-text -->
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="review-text">Add Review</label>
            <input type="text" id="review-text" class="form-control" aria-describedby="review-text" placeholder="Enter review Text">
          </div>
          <div class="form-group">
            <label for="review-description"></label>
            <textarea class="form-control" id="review-description" aria-describedby="review-description" placeholder="Enter review Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h4>Reviews that belong to this user:</h4>
        <ul id="review-list" class="list-group">
          {{#each reviews}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="review/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/review.js"></script>

